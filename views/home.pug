    include ../static/da.css

block content
    
    section#introSection
      div.Heading Welcome To RAHSHAH's World
      div.tagline Come Fall In Love With Dance

    section#OurExpertise 
      h2 Our Expertise
    div.card
      h3 Hip Hop
      div.card-box
        div.card-img
          img(src="/static/Images/HIP HOP.jpg", alt="", srcset="")
    div.card
      h3 Contemporary 
      div.card-box
        div.card-img
          img(src="/static/Images/Contemporary.jpg", alt="", srcset="")
    div.card
      h3 Ballet
      div.card-box
        div.card-img
          img(src="/static/Images/Ballet.jpg", alt="", srcset="")
    div.card
